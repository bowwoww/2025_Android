<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="高屏澎東分署登入畫面"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:src="@drawable/pika"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:id="@+id/image1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/image1"
        android:text="帳號 : "
        android:id="@+id/text01"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/text01"
        android:layout_marginTop="20dp"
        android:hint="請輸入帳號"
        android:inputType="text"
        android:text=""
        android:layout_alignBaseline="@+id/text01"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text01"
        android:text="密碼 : "
        android:id="@+id/text02"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/text02"
        android:layout_marginTop="20dp"
        android:hint="請輸入密碼"
        android:inputType="text"
        android:text=""
        android:layout_alignBaseline="@+id/text02"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text02">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="學生"
            android:checked="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="教師"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="職工"/>
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登入"
        android:textSize="18sp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="65dp"
        android:id="@+id/btn01"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="註冊"
        android:textSize="18sp"
        android:layout_marginTop="390dp"
        android:layout_toRightOf="@id/btn01"/>
</RelativeLayout>